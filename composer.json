{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "",
            "role": ""
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packagist.drupal-composer.org"
        }
    ],
    "require": {
        "composer/installers": "^1.0.20",
        "drupal-composer/drupal-scaffold": "^1.3.1",
        "cweagans/composer-patches": "dev-master",
        "vlucas/phpdotenv": "^2.0.1",
        "oscarotero/env": "^1.0",
        "drupal/core": "~8.0",
        "drush/drush": "~9",
        "drupal/console": "~0.10",
        "drupal/devel": "8.*",
        "drupal-composer/drupal-security-advisories": "8.0.x-dev",
        "roave/security-advisories": "dev-master",
        "drupal/security_review": "8.*",
        "drupal/admin_toolbar": "~8.1.14",
        "drupal/lightning": "8.1.0-rc5",
        "drupal/page_manager": "~8.1.0",
        "drupal/panelizer": "~8.3.0",
        "drupal/entity_embed": "~8.1.0",
        "drupal/media_entity": "~8.1.0",
        "drupal/services": "~8.4.0",
        "drupal/media_entity_image": "~8.1.0",
        "drupal/media_entity_instagram": "~8.1.0",
        "drupal/media_entity_twitter": "~8.1.0",
        "drupal/media_entity_embeddable_video": "~8.1.0",
        "drupal/inline_entity_form": "~8.1.0",
        "drupal/scheduled_updates": "~8.1.0",
        "drupal/workbench_moderation": "~8.1.0",
        "drupal/ctools": "8.3.0-alpha25"
    },
    "require-dev": {
        "behat/mink": "~1.6",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "^1.1@dev",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsStream": "~1.2",
        "phpunit/phpunit": "~4.8",
        "symfony/css-selector": "2.7.*",
        "geerlingguy/drupal-vm": "~3.0.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php",
            "scripts/composer/LightningScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::buildScaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Acquia\\Lightning\\ScriptHandler::deployLibraries"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::buildScaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "Acquia\\Lightning\\ScriptHandler::deployLibraries"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
        },
        "patches": {
            "drupal/core": {
                "Ignore front end vendor folders to improve directory search performance": "https://www.drupal.org/files/issues/ignore_front_end_vendor-2329453-116.patch"
            }
        }
    }
}
